<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.thepriest.andrea.zramtool.Enable_ZRAM_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:padding="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable/Disable ZRAM: "
                android:id="@+id/switchZRAM"
                android:checked="false"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:focusable="true"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total size (all disks):"
                    android:id="@+id/textView6"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:id="@+id/textViewSize"
                    android:layout_marginRight="20dp"
                    android:editable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:numeric="integer"
                    android:clickable="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="MB"
                    android:id="@+id/textView"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSize"
                android:max="1000"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Swappiness:"
                    android:id="@+id/textView2"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:id="@+id/textViewSwappiness"
                    android:layout_marginRight="20dp"
                    android:editable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:numeric="integer"
                    android:clickable="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="%"
                    android:id="@+id/textView4"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSwappiness"
                android:max="100"
                android:indeterminate="false"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="VFS cache pressure:"
                    android:id="@+id/textView3"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:text="150"
                    android:id="@+id/textViewVFSCachePressure"
                    android:layout_marginRight="20dp"
                    android:editable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:numeric="integer"
                    android:clickable="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="%"
                    android:id="@+id/textView7"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarVFSCachePressure"
                android:max="1000"
                android:indeterminate="false"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />

            <Button
                style="@style/ButtonTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:id="@+id/buttonApply"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
